.row
	.col-lg-12
		.panel.panel-default.panel-hovered.mb20(ng-show="creando" )
			.panel-heading(style="margin-bottom: 10px;") Nuevo inventario

			.panel-body
				div
					form(ng-submit="guardarInventario()")

						.row
							.col-lg-4
								md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
									label Nombre
									input(ng-model="cateNuevo.nombre")

						.row
							.col-lg-12(style="text-align: center;margin-bottom: 40px")
								md-button.md-raised.md-default(type="button" ng-click="creando=false") Cancelar

								md-button.md-raised.md-primary(type="submit" ng-disabled="guardando") Guardar

.row
	.col-lg-12
		.panel.panel-default.panel-hovered.mb20(ng-show="editando" )
			.panel-heading(style="margin-bottom: 10px;") Editar inventario

			.panel-body
				div(ng-show="editando")
					form(ng-submit="actualizarInventario()")
						.row
							.col-lg-4
								md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
									label Nombre
									input(ng-model="cateActualizar.nombre")
							
						.row
							.col-lg-12(style="text-align: center;margin-bottom: 40px")
								md-button.md-raised.md-default(type="button" ng-click="editando=false") Cancelar

								md-button.md-raised.md-primary(type="submit" ng-disabled="guardando") Actualizar




.row
	.col-lg-12
		.panel.panel-default.panel-hovered.mb20
			.panel-heading Inventarios
			
			.panel-body(style="overflow: auto")
				.row
					.col-lg-12
						md-button(ng-click="crearInventario()" class="md-raised md-primary" ng-if="hasRole([USER_ROLES.administrador, USER_ROLES.tecnico])") Nuevo Inventario

				.row
					.col-lg-12
						div(multiple style="width: 130px; height: 200px; border: 1px solid #666; overflow: auto")
							div(ng-repeat="inventario in inventarios" style="padding: 10px" 
								ng-class="{ 'inv-seleccionado': inventario.seleccionado }" ng-click="seleccionarInventario(inventario)")
								span(ng-if="inventario.actual" style="font-weight: 600; text-decoration: underline;") {{ inventario.fecha }}
								span(ng-if="!inventario.actual" ) {{ inventario.fecha }}


				div(ui-grid="opcionesGrid" ui-grid-edit ui-grid-resize-columns ui-grid-cellnav style="height: 600px")


