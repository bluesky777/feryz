h1(class="text text-primary") Empleados



button(ng-click="traerEmpleados()" class="btn btn-default") Traer todos los empleados

input(type="text" ng-model="buscar.cargo")

table(class="table table-default")
	tr
		td Nombre
		td cargo
		td salario
		td Editar & Eliminar
	tr(ng-repeat="emp in empleados | filter:buscar")
		td {{ emp.nombre }}
		td {{ emp.cargo }}
		td {{ emp.salario }}
		td 
			a.btn.btn-default(href="" ng-click="editarEmpleado(emp)")
				i.fa.fa-pencil
			a.btn.btn-danger(href="" ng-click="eliminarEmpleado(emp)")
				i.fa.fa-times
