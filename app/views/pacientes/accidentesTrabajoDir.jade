.panel.panel-default.panel-hovered.mb20
	.panel-heading(style="padding: 10px 0;") 
		| Accidentes de trabajo
		md-button.btn-pequenito.md-raised.md-default(aria-label="Nuevo" ng-click="nuevoAccidTrabajo()" ng-hide="creandoAccidTrabajo") Agregar 

	.panel-body


		md-list(ng-hide="pacienteEdit.accidentesTrabajo.length == 0")
			md-list-item(ng-repeat="accidente in pacienteEdit.accidentesTrabajo" ng-click="editarAccidTrabajo(accidente)") 
				p {{accidente.diagnostico}} - {{accidente.tipo_accidente}}
				md-button.md-icon-button(aria-label="Eliminar")
					.fa.fa-times




		form(style="margin-top=10px;" ng-show="accidentesTrabajo.length == 0 || creandoAccidTrabajo" ng-submit="guardarAccidenteTrabajo()")
			h5(style="margin: 10px") Nuevo accidente de trabajo: 

				.row
					.col-lg-4.col-sm-6
						label Fecha Ingreso

						md-datepicker(style="width: 260px;height" ng-model="AccidTrabajoNuevo.fecha" md-placeholder="Enter date")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Diagnostico
							input(ng-model="AccidTrabajoNuevo.diagnostico")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label ARP
							input(ng-model="AccidTrabajoNuevo.arp")

				.row
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Factor riesgo
							input(ng-model="AccidTrabajoNuevo.fact_riesgo")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Organo afectado
							input(ng-model="AccidTrabajoNuevo.organo_afectado")
					
					.col-lg-4.col-sm-12
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Agente
							input(ng-model="AccidTrabajoNuevo.agente")
				
				.row
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Tipo de accidente
							input(ng-model="AccidTrabajoNuevo.tipo_accidente")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Severidad
							input(ng-model="AccidTrabajoNuevo.severidad")
					
					.col-lg-4.col-sm-12
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Secuelas
							input(ng-model="AccidTrabajoNuevo.secuelas")
				md-button.md-raised.md-default(aria-label="Cancelar" ng-click="creandoAccidTrabajo=false") Cancelar
				md-button.md-raised.md-primary(type="submit" aria-label="Nuevo") Guardar


		form(style="margin-top=10px;" ng-show="editandoAccidTrabajo" ng-submit="actualizarAccidTrabajo()")
			h5(style="margin: 10px") Editar accidente de trabajo: 

				.row
					.col-lg-4.col-sm-6
						label Fecha Ingreso

						md-datepicker(style="width: 260px;height" ng-model="AccidTrabajoNuevo.fecha" md-placeholder="Enter date")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Diagnostico
							input(ng-model="AccidTrabajoActual.diagnostico")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label ARP
							input(ng-model="AccidTrabajoActual.arp")

				.row
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Factor riesgo
							input(ng-model="AccidTrabajoActual.fact_riesgo")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Organo afectado
							input(ng-model="AccidTrabajoActual.organo_afectado")
					
					.col-lg-4.col-sm-12
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Agente
							input(ng-model="AccidTrabajoActual.agente")
				
				.row
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Tipo de accidente
							input(ng-model="AccidTrabajoActual.tipo_accidente")
					
					.col-lg-4.col-sm-6
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Severidad
							input(ng-model="AccidTrabajoActual.severidad")
					
					.col-lg-4.col-sm-12
						md-input-container.md-block(flex-gt-sm style="margin: 0!important; padding-bottom: 0!important")
							label Secuelas
							input(ng-model="AccidTrabajoActual.secuelas")
				md-button.md-raised.md-default(aria-label="Cancelar" ng-click="editandoAccidTrabajo=false") Cancelar
				md-button.md-raised.md-primary(type="submit" aria-label="Nuevo") Guardar
