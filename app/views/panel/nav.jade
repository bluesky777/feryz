.nav-head
	// site logo
	a.site-logo.text-uppercase(ui-sref="panel")
		i.fa.fa-globe
		span.text Wissen

// Site nav (vertical) 
nav.site-nav.clearfix(role="navigation")


	.profile.clearfix.mb15
		img(ng-src="{{imagesPath + USER.image_nombre}}" alt="{{USER.username}}")
		div.group
			h5.name {{USER.nombres}}
			small.desig {{USER.apellidos}}


	// navigation
	ul.list-unstyled.clearfix.nav-list.mb15(highlight-active="")
		li(ui-sref-active-eq="active")
			a(href="" ui-sref="panel" md-ink-ripple="")
				i.fa.fa-home
				span.text Inicio

		li(ui-sref-active="active" )
			a(href="" ui-sref="panel.usuarios" md-ink-ripple="")
				i.fa.fa-laptop
				span.text Usuarios

		li(ui-sref-active="active")
			a(href="" ui-sref="panel.pacientes" md-ink-ripple="")
				i.fa.fa-map-marker
				span.text Pacientes

		li(ui-sref-active="active" ng-if="hasRoleOrPerm('admin', 'tecnico', 'profesor')")
			a(href="" ui-sref="panel.entidades" md-ink-ripple="")
				i.fa.fa-bank
				span.text {{ 'ENTIDADES_MENU' | translate }}

		li(ui-sref-active="active" ng-if="hasRoleOrPerm('admin', 'tecnico', 'profesor')")
			a(href="" ui-sref="panel.preguntas" md-ink-ripple="")
				i.fa.fa-question
				span.text {{ 'PREGUNTAS_MENU' | translate }}

		li(ui-sref-active="active" ng-if="hasRoleOrPerm('admin', 'tecnico', 'profesor')")
			a(href="" ui-sref="panel.evaluaciones" md-ink-ripple="")
				i.fa.fa-clipboard
				span.text {{ 'EVALUACIONES_MENU' | translate }}

		li(ui-sref-active="active" ng-if="hasRoleOrPerm('admin', 'tecnico', 'profesor')")
			a(href="" ui-sref="panel.usuarios" md-ink-ripple="")
				i.fa.fa-users
				span.text {{ 'USERS_MENU' | translate }}

		li(ui-sref-active="active" ng-if="hasRoleOrPerm('admin', 'tecnico', 'profesor')")
			a(href="" ui-sref="panel.informes" md-ink-ripple="")
				i.fa.fa-users
				span.text {{ 'INFORMES_MENU' | translate }}


		li(ui-sref-active="active" ng-if="false")
			a(href="" md-ink-ripple="")
				i.fa.fa-asterisk
				span.text Construcción
				i.arrow.fa.fa-angle-left
				span.badge.badge-xs.badge-primary 2

			ul.inner-drop.nested.list-unstyled
				li 
					a(href="" md-ink-ripple="") Font Awesome
				li 
					a(href="" md-ink-ripple="") Ionicons

		


<!-- nav-foot -->
footer.nav-foot
	p 2015 © 
		span Wissen