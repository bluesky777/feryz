.panel.panel-default.panel-hovered.panel-stacked.mb20
	.panel-heading   
		| Usuarios

	.panel-body


		.row
			.col-md-9


				#grid1.grid(ui-grid="gridOptions" ui-grid-selection ui-grid-edit ui-grid-resize-columns style="height: 600px")


			.col-md-3

				span(ng-show="currentusers.length == 1")

					md-select(ng-model="currentusers[0].nivel_id" placeholder="Niveles")
						md-option(ng-value="nivel.nivel_id" ng-repeat="nivel in nivelesking | nivelesTraducidos:idioma") {{nivel.nombre}}
						md-option(value="") Todos


				md-content
					md-list

						md-subheader.md-no-sticky
							| Inscripción rápida

						md-list-item(ng-repeat="categoriaking in currentusers | categsInscritas:categoriasking:idioma | filter:{nivel_id: currentusers[0].nivel_id} ")
							md-checkbox(ng-model="categoriaking.selected" ng-change="cambiaInscripcion(categoriaking, currentusers)" aria-label="Categoria" ng-disabled="categoriaking.cambiando")
							span(ng-show="categoriaking.algunos") *
							span {{categoriaking.abrev }}
							.fa.fa-comments-o.md-secondary(aria-label="Comentario inútil" ng-click="")