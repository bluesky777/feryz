Center
	h1(class="text-primary") Productos

div(ng-show="creando" )
	form(ng-submit="guardarProducto()")
		input(type="text" ng-model="productoNuevo.nombre" placeholder="Nombre")
		input(type="text" ng-model="productoNuevo.codigo" placeholder="Código")
		input(type="submit" value="Guardar" class="btn btn-default")
		input(type="button" value="Cancelar" ng-click="creando=false" class="btn btn-danger")


div(ng-show="editando")
	form(ng-submit="actualizarProducto()")
		input(type="text" ng-model="productoEdit.nombre" placeholder="Nombre")
		input(type="text" ng-model="productoEdit.codigo" placeholder="Código")
		input(type="submit" value="Actualizar" class="btn btn-primary")
		input(type="button" value="Cancelar" ng-click="editando=false" class="btn btn-danger")



button(ng-click="crearProducto()" class="btn btn-success") Nuevo producto

table( class="table table-bordered")
	tr
		td Nombre
		td Apellido
		td Editar & Eliminar
	tr(ng-repeat="prod in productos")
		td {{ prod.nombre }}
		td {{ prod.codigo }}
		td 
			a.btn.btn-default(href="" ng-click="editarProducto(prod)")
				i.fa.fa-pencil
			a.btn.btn-danger(href="" ng-click="eliminarProducto(prod)")
				i.fa.fa-times
		

